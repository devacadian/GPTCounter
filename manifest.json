{
    "manifest_version": 3,
    "name": "ChatGPT Prompt Counter",
    "version": "1.0",
    "description": "Counts the number of prompts sent to ChatGPT within a 3-hour period.",
    "permissions": [
        "webRequest",
        "storage"
    ],
    "icons": {
        "16": "openai_icon.png",
        "48": "openai_icon.png",
        "128": "openai_icon.png"
    },
    "host_permissions": [
        "*://chat.openai.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    }
}
